{% extends 'layout.twig' %}

{% block content %}	
	<div class="row">
    	<div class="col-md-6 col-md-offset-3">
            <h1>Cadastre-se</h1>

            <hr>

            <form method="POST" action="/auth/register">             
                <div class="form-group">
                    <label for="name">Nome:</label>
                    <input type="name"
                           name="name"
                           id="name"
                           class="form-control"
                           value="" required>
                </div>

                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email"
                           name="email"
                           id="email"
                           class="form-control"
                           value="" required>
                </div>

                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password"
                           name="password"
                           id="password"
                           class="form-control" required>
                </div>
               
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Inscreva-se no Fila Virtual</button>
                </div>
            </form>          
        </div>
    </div>
{% endblock  %}