{% extends 'layout.twig' %}

{% block content %}	
	<div class="row">
    	<div class="col-md-6 col-md-offset-3">
            <h1>Reservar sala de Reunião</h1>

            <hr>

            <form method="POST" action="/room/register">             
                <div class="form-group">
                    <label for="name">Número da sala de aula:</label>
                    <input type="number"
                           name="number"
                           id="number"
                           class="form-control"
                           value="" required>
                </div>

                <label for="reserved">Reservar</label>
                <div class="form-group">                    
                    <select name="reserved">
                        <option value="1">Sim</option>
                        <option value="0">Não</option>                      
                    </select> 
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </div>
            </form>          
        </div>
    </div>
{% endblock  %}